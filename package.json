{
  "name": "immo24-studioassistent",
  "version": "0.2.0-beta",
  "main": "main.js",
  "description": "Applikation zur Dateiorganisation auf vernetzten Avid Pro Tools Systemen",
  "author": "Philipp Menzel",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/Robotron80/immo24-studioassistent.git"
  },
  "homepage": "https://github.com/Robotron80/immo24-studioassistent",
  "bugs": {
    "url": "https://github.com/Robotron80/immo24-studioassistent/issues"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "de.immo24.studioassistent",
    "productName": "immo24 Studioassistent",
    "files": [
      "main.js",
      "preload.js",
      "assets/**",
      "package.json",
      "immo24-ui/dist/**"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "assets/license.txt"
    },
    "mac": {
      "target": [
      {
        "target": "dmg"
      }
    ],
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "iconSize": 128
    },
    "directories": {
      "buildResources": "assets"
    },
    "icon": "assets/icon",
    "asar": false
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "express": "4.21.2",
    "node-red": "^4.1.0",
    "node-red-contrib-fs-extra": "^1.0.1",
    "node-red-contrib-fs-ops": "^1.6.0",
    "node-red-contrib-os": "^0.2.1",
    "vuetify": "^3.9.3"
  }
}
